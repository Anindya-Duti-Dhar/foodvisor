<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_margin="8dp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight=".9"
            android:gravity="center">

            <ImageView
                android:id="@+id/restaurant_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:padding="4dp"
                android:src="@drawable/kfc"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="4dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="2">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/restaurant_name"
                    android:text="Restaurant Name"
                    android:maxLines="1"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="2dp"
                    android:scrollHorizontally="true"
                    android:ellipsize="end"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/restaurant_online"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:scaleType="fitCenter"
                    android:layout_marginTop="2dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_online"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/user_restaurant_rating"
                    android:text="4.5"
                    android:maxLines="1"
                    android:layout_marginLeft="4dp"
                    android:scrollHorizontally="true"
                    android:ellipsize="end"
                    android:textStyle="normal"
                    android:textColor="@color/primary_text"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/base_restaurant_rating"
                    android:text="/5"
                    android:maxLines="1"
                    android:scrollHorizontally="true"
                    android:ellipsize="end"
                    android:textStyle="normal"
                    android:textColor="@color/secondary_text"
                    android:textSize="15sp" />

                <RatingBar
                    android:id="@+id/restaurantRatingBar"
                    style="?android:attr/ratingBarStyleSmall"
                    android:theme="@style/RatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:numStars="5"
                    android:isIndicator="false" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/restaurant_alarm"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_action_time"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/restaurant_distance"
                    android:text="4.5"
                    android:maxLines="1"
                    android:layout_marginLeft="4dp"
                    android:scrollHorizontally="true"
                    android:ellipsize="end"
                    android:textStyle="normal"
                    android:textColor="@color/primary_text"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/restaurant_alert"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="16dp"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_action_dish"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/restaurant_cost"
                    android:text="45min"
                    android:maxLines="1"
                    android:layout_marginLeft="4dp"
                    android:scrollHorizontally="true"
                    android:ellipsize="end"
                    android:textStyle="normal"
                    android:textColor="@color/primary_text"
                    android:textSize="15sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/grey" />

</LinearLayout>

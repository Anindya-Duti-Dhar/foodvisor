<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_margin="8dp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight=".8"
            android:gravity="center">

            <ImageView
                android:id="@+id/rent_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:padding="1dp"
                android:background="@drawable/rent_item_image_bg"
                android:src="@drawable/rent"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="16dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="2.2">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rent_name"
                    android:text="Rent Name"
                    android:maxLines="1"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="2dp"
                    android:scrollHorizontally="true"
                    android:ellipsize="end"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rent_address"
                    android:text="Road-10, Nikunja-2, Dhaka"
                    android:maxLines="1"
                    android:layout_marginLeft="4dp"
                    android:scrollHorizontally="true"
                    android:ellipsize="end"
                    android:textStyle="normal"
                    android:textColor="@color/trans_black_75"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rent_cost"
                    android:text="12000 Taka/Month"
                    android:maxLines="1"
                    android:layout_marginLeft="4dp"
                    android:scrollHorizontally="true"
                    android:ellipsize="end"
                    android:textStyle="normal"
                    android:textColor="@color/primary_text"
                    android:textSize="15sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/grey" />

</LinearLayout>

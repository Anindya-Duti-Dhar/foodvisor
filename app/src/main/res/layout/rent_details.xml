<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSheetLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:behavior_hideable="true"
    app:behavior_peekHeight="60dp"
    app:layout_behavior="@string/bottom_sheet_behavior">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <LinearLayout
        android:id="@+id/rent_details_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:background="@color/marun"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_vertical_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:orientation="horizontal"
            android:weightSum="3">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight=".8"
                android:gravity="center">

                <ImageView
                    android:id="@+id/rent_details_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/rent_item_image_bg"
                    android:padding="1dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/rent" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="8dp"
                android:layout_weight="2.2"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/rent_details_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginTop="4dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:scrollHorizontally="true"
                        android:text="Rent Name"
                        android:textColor="@color/primary_text"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/rent_uploader_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:layout_marginLeft="4dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:scrollHorizontally="true"
                        android:text="Anindya Duti Dhar"
                        android:textColor="@color/primary_text"
                        android:textSize="12sp"
                        android:textStyle="normal" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/rent_post_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="2dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="2dp"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:scrollHorizontally="true"
                        android:text="Posted 2 days ago"
                        android:textColor="@color/secondary_text"
                        android:textSize="12sp"
                        android:textStyle="normal" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_vertical_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:weightSum="2">

            <Button
                android:id="@+id/add_to_favorite"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:background="@drawable/add_to_favorite"
                android:text="ADD TO FAVORITE"
                android:textColor="@color/secondary_text"
                android:gravity="left|center_vertical"
                android:layout_gravity="left|center_vertical"
                android:textSize="11sp"
                android:paddingLeft="4dp"
                android:drawablePadding="4dp"
                android:drawableLeft="@drawable/ic_action_action_bookmark_outline"/>

            <Button
                android:id="@+id/contact"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:background="@drawable/contact_bg"
                android:text="Contact"
                android:textSize="11sp"
                android:gravity="left|center_vertical"
                android:textColor="@color/white"
                android:paddingLeft="4dp"
                android:drawablePadding="4dp"
                android:drawableLeft="@drawable/ic_action_notification_sms"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_margin="16dp"
            android:background="@color/grey" />


        <TextView
            android:id="@+id/rent_details_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:text="Address : "
            android:textColor="@color/primary_text"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/rent_Details_address_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="16dp"
            android:gravity="center_vertical"
            android:text="Road-10, Nikunja-2, Dhaka"
            android:textColor="@color/secondary_text"
            android:textSize="12sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/rent_details_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:text="Rent Cost : "
            android:textColor="@color/primary_text"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/rent_details_cost_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="16dp"
            android:gravity="center_vertical"
            android:text="12000 Tk/Month"
            android:textColor="@color/secondary_text"
            android:textSize="12sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/rent_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:text="Description : "
            android:textColor="@color/primary_text"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/rent_description_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="16dp"
            android:gravity="center_vertical"
            android:text="I would like rent my home for only two person. we have two bathroom and 2 bed room with one kitchen."
            android:textColor="@color/secondary_text"
            android:textSize="12sp"
            android:textStyle="normal" />

    </LinearLayout>

            <LinearLayout
                android:id="@+id/add_post_layout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="24dp"
                android:paddingLeft="24dp"
                android:visibility="gone"
                android:paddingRight="24dp">

                <!-- Post name Label -->
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/inputLayoutPostName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:counterEnabled="true"
                    app:counterMaxLength="256"
                    android:layout_marginBottom="8dp">
                    <EditText android:id="@+id/input_post_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:ems="256"
                        android:ellipsize="end"
                        android:scrollHorizontally="true"
                        android:maxLines="1"
                        android:hint="Post Title" />
                </android.support.design.widget.TextInputLayout>

                <!-- Location Label -->
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/inputLayoutLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:counterEnabled="true"
                    app:counterMaxLength="256"
                    app:passwordToggleEnabled="true"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp">
                    <EditText android:id="@+id/input_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:ems="256"
                        android:scrollHorizontally="true"
                        android:maxLines="1"
                        android:hint="Location"/>
                </android.support.design.widget.TextInputLayout>

                <!-- Cost Label -->
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/inputLayoutCost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:counterEnabled="true"
                    app:counterMaxLength="6"
                    app:passwordToggleEnabled="true"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp">
                    <EditText android:id="@+id/input_cost"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="6"
                        android:scrollHorizontally="true"
                        android:maxLines="1"
                        android:hint="Taka per month"/>
                </android.support.design.widget.TextInputLayout>

                <!-- Description Label -->
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/inputLayoutDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:counterEnabled="true"
                    app:counterMaxLength="1000"
                    app:passwordToggleEnabled="true"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp">
                    <EditText android:id="@+id/input_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:ems="1000"
                        android:hint="Short Description"/>
                </android.support.design.widget.TextInputLayout>

                <!-- Post Button -->
                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_post"
                    android:layout_width="240dp"
                    android:layout_height="42dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="12dp"
                    android:layout_gravity="center_horizontal"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:background="@drawable/common_button_shape"
                    android:padding="12dp"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:text="Post"/>

            </LinearLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>
